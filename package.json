{
  "name": "healthcare-hub",
  "version": "1.0.0",
  "description": "Healthcare Hub - Comprehensive Health Management Platform",
  "private": true,
  "workspaces": [
    "packages/*",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:web\"",
    "dev:web": "cd packages/web && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:backend && npm run build:web",
    "build:web": "cd packages/web && npm run build",
    "build:backend": "cd backend && npm run build",
    "start": "concurrently \"npm run start:backend\" \"npm run start:web\"",
    "start:web": "cd packages/web && npm run start",
    "start:backend": "cd backend && npm run start",
    "install:all": "npm install && cd packages/web && npm install && cd ../../backend && npm install",
    "test": "npm run test:web && npm run test:backend",
    "test:web": "cd packages/web && npm run test",
    "test:backend": "cd backend && npm run test",
    "lint": "npm run lint:web && npm run lint:backend",
    "lint:web": "cd packages/web && npm run lint",
    "lint:backend": "cd backend && npm run lint"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}